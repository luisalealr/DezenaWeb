<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Administrador</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <link rel="shortcut icon" href="/recursos/icono.png" />
    <style>
      .navbar {
        border-bottom: 2px solid #000;
      }
      .navbar-light .navbar-nav .nav-link {
        font-weight: bold;
        color: #000;
      }
      body {
        background-image: url("/recursos/slider-1-opacity-56.jpg");
        background-attachment: fixed;
        background-position: center top;
        background-size: cover;
        background-repeat: no-repeat;
      }
      .opaque-background {
        background-color: rgba(0, 0, 0, 0.5);
        padding: 20px;
        border-radius: 10px;
        margin-top: 20px; /* Espacio entre el navbar y el contenedor */
      }
      .form-control {
        margin-bottom: 10px; /* Espacio entre elementos del formulario */
      }
      .form-group label {
        color: white;
        font-weight: bold;
      }
      .btn.btn-primary {
        background-color: #646464;
        color: white;
        font-weight: normal;
      }
    </style>
  </head>
  <body>

    <%- include('./partials/administradorNavbar') %>
    
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-10">
          <div class="opaque-background">
            <form>
              <div class="form-row">
                <div class="form-group col-md-6">
                  <label for="nombre">Nombre</label>
                  <input
                    type="text"
                    class="form-control"
                    id="nombre"
                    placeholder="Ingrese nombre del taller"
                  />
                </div>
                <div class="form-group col-md-6">
                  <label for="correo">Correo</label>
                  <input
                    type="text"
                    class="form-control"
                    id="correo"
                    placeholder="Ingrese correo del taller"
                  />
                </div>
                <div class="form-group col-md-6">
                  <label for="direccion">Direcci√≥n</label>
                  <input
                    type="text"
                    class="form-control"
                    id="direccion"
                    placeholder="Ingrese direccion del taller"
                  />
                </div>
                <div
                  class="form-group col-md-6 d-flex align-items-end justify-content-center"
                >
                  <button type="submit" class="btn btn-primary">
                    Agregar taller
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </body>
</html>
